@model bd_course.ViewModels.RegisterViewModel

<div class="wrapper">

    <!-- Start Login
    ============================================= -->
    <div class="login-area">
        <div class="container">
            <div class="row">

                <div class="col-md-6 col-md-offset-3">
                    <div class="login-box">
                        <div class="login">
                            <div class="content">
                                <a href="#"><img src="/img/logo.png" alt="Logo"></a>

                                <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="row">
                                            <div class="form-group">
                                                <input class="form-control" placeholder="Login*" asp-for="Login" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="row">
                                            <div class="form-group">
                                                <input class="form-control" placeholder="Email*" asp-for="Email" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="row">
                                            <div class="form-group">
                                                <input class="form-control" placeholder="Password*" asp-for="Password" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="row">
                                            <div class="form-group">
                                                <input class="form-control" placeholder="Confirm Password*" asp-for="ConfirmPassword" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="row">
                                            <div class="form-group">
                                                <input class="form-control" placeholder="Name Playlist*" asp-for="NamePlaylist" type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="row">
                                            <button type="submit">
                                                Register
                                            </button>
                                        </div>
                                    </div>
                                    <div class="sign-up">
                                        <p>
                                            Already have an account? <a asp-action="Login" asp-controller="Account">Login now</a>
                                        </p>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>