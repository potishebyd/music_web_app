@model bd_course.ViewModels.LoginViewModel

<div class="wrapper">

    <!-- Start Login
    ============================================= -->
    <div class="login-area">
        <div class="container">
            <div class="row">
                
                    <div class="col-md-6 col-md-offset-3">
                        <div class="login-box">
                            <div class="login">
                                <div class="content">
                                    <a href="#"><img src="/img/logo.png" alt="Logo"></a>

                                    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                                        <div>
                                            <div class="col-lg-12 col-md-12">
                                                <div class="row">
                                                    <div class="form-group">
                                                        <input class="form-control" placeholder="Lgin*" asp-for="Login" type="text">
                                                        <span asp-validation-for="Login" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                <div class="row">
                                                    <div class="form-group">
                                                        <input class="form-control" placeholder="Password*" asp-for="Password" type="text">
                                                        <span asp-validation-for="Password" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                <div class="row">
                                                    <button type="submit">
                                                        Login
                                                    </button>
                                                </div>
                                            </div>

                                            <div class="sign-up">
                                                <p>
                                                    Don't have an account? <a asp-action="Register" asp-controller="Account">Sign up now</a>
                                                </p>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
        
            </div>
        </div>
    </div>