@using bd_course.ViewModels
@model bd_course.ViewModels.ArtistViewModel

<div class="panel panel-default">
    <table class="table table-bordered bg-light">
        <thead>
            <tr>
                <td>
                    <a asp-controller="Artist"
                       asp-action="GetAllArtists"
                       asp-route-sortOrder="@ViewBag.IdSort"
                       asp-route-name="@Model.filterArtistViewModel.name"
                       asp-route-country="@Model.filterArtistViewModel.country">
                        <h3><font color="#19e68c">Id</font></h3>
                    </a>
                </td>
                <td>
                    <a asp-controller="Artist"
                       asp-action="GetAllArtists"
                       asp-route-sortOrder="@ViewBag.NameSort"
                       asp-route-name="@Model.filterArtistViewModel.name"
                       asp-route-country="@Model.filterArtistViewModel.country">
                        <h3><font color="#19e68c">NameArtist</font></h3>
                    </a>
                </td>
                <td>
                    <a asp-controller="Artist"
                       asp-action="GetAllArtists"
                       asp-route-sortOrder="@ViewBag.CountrySort"
                       asp-route-name="@Model.filterArtistViewModel.name"
                       asp-route-country="@Model.filterArtistViewModel.country">
                        <h3><font color="#19e68c">Country</font></h3>
                    </a>
                </td>
                <td>
                    <a href="#">
                        <h3><font color="#19e68c">Songs</font></h3>
                    </a>
                </td>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (Artist artist in Model.artists)
                {
                    if (artist.Id != null)
                        @Html.Partial("AllArtists", artist)
                }
            }
        </tbody>
    </table>
</div>